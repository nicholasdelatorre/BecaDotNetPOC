

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Default.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>Beca .NET - @Page.Title</title>
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-sm bg-dark navbar-dark justify-content-between">
            <!-- Brand -->
            <a class="navbar-brand" href="~/Home"><b>Beca .NET</b></a>


            <!-- Links -->
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="~/Home"><b>Home</b></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/User/New"><b>Criar Usuário</b></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/User/List"><b>Listar Usuário</b></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Customer/New"><b>Criar Cliente</b></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Customer/List"><b>Listar Cliente</b></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Project/New"><b>Criar Projeto</b></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Project/List"><b>Listar Projetos</b></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/ProjectUser/List"><b>Histórico</b></a>
                </li>


            </ul>
            <div style="padding-top: 16px">
            <p style="color: #fff"><b>Olá, @BecaDotNet.UI.MVC.RazorView.Models.ViewModel.CurrentUser.UserData.Name </b></p>
            </div>
            
            <div>
                @Html.ActionLink("Logout", "DoLogout", "Login", new { @class = "btn btn-outline-danger my-2 my-sm-0" })
            </div>
        </nav>
    </header>
    <div id="body">
        <div class="mx-auto col-10">
            @RenderBody()
        </div>
    </div>
</body>
</html>
